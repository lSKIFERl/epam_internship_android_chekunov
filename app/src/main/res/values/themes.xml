<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Epaminternshipandroidcheckunov" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/slightly_gray</item>
        <item name="colorPrimaryVariant">@color/selected_type</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Font -->
        <item name="android:textSize">@dimen/small_font_size</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="roundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corners_radius</item>
        <item name="color">@color/white</item>
    </style>

    <style name="Toolbar.Settings" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:textColorSecondary">@color/selected_type</item>
    </style>

</resources>