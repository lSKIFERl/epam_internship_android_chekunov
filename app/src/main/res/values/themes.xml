<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Epaminternshipandroidcheckunov" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/slightly_gray</item>
        <item name="colorPrimaryVariant">@color/selected_type</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Font -->
        <item name="android:textSize">@dimen/small_font_size</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="roundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corners_radius</item>
        <item name="color">@color/white</item>
    </style>

    <style name="selected_button" parent="Base.Widget.AppCompat.Button">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="colorOnPrimary">?attr/colorOnSecondary</item>
    </style>

</resources>