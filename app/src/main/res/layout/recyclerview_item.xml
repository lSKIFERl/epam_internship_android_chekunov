<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/dishImage"
        android:layout_width="@dimen/item_image_width"
        android:layout_height="@dimen/item_height"
        android:layout_marginLeft="@dimen/detail_margin"
        android:layout_marginTop="@dimen/detail_margin"
        app:srcCompat="@android:drawable/btn_dialog"
        android:layout_marginStart="@dimen/detail_margin" />

    <TextView
        android:id="@+id/dishLabel"
        android:layout_width="@dimen/item_text_width"
        android:layout_height="@dimen/item_height"
        android:layout_marginLeft="@dimen/detail_margin"
        android:layout_marginTop="@dimen/detail_margin"
        android:lineSpacingExtra="@dimen/item_spacing"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginStart="@dimen/detail_margin" />
</LinearLayout>