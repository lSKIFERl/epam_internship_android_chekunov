<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.HostFragment" >

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/type_list_container"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginStart="@dimen/detail_types_list_margin_left"
        android:layout_marginLeft="@dimen/detail_types_list_margin_left"
        android:layout_marginTop="@dimen/detail_margin_top"
        android:name="com.skifer.epam_internship_android_checkunov.fragments.TypeListFragment"
        tools:layout="@layout/fragment_type_list" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/meal_list_container"
        android:layout_marginTop="@dimen/detail_margin_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_meal_list" />

</LinearLayout>