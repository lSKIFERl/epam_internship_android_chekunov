<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@drawable/rounded_corners_card"
    android:nestedScrollingEnabled="true"

    android:orientation="vertical"
    android:paddingLeft="@dimen/detail_margin"

    android:paddingRight="@dimen/detail_margin"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/detail_image_height"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <View
        android:layout_width="@dimen/pick_stick_width"
        android:layout_height="@dimen/pick_stick_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/type_image_margin"
        android:background="@drawable/rounded_corners" />

    <TextView
        android:id="@+id/cuisine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detail_margin"
        android:fontFamily="@font/roboto"
        android:text="@string/cuisine"
        android:textAllCaps="true"
        android:textSize="@dimen/medium_font_size" />

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/meal_detail_small_margin"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/title"
        android:textSize="@dimen/large_font_size" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tag_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/details_types_list_height"
        android:layout_marginTop="@dimen/details_marin_top_small"
        android:layout_marginBottom="@dimen/details_margin_bottom"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_tag" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pick_stick" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_margin_top"
                android:fontFamily="@font/roboto"
                android:text="@string/ingredients"
                android:textSize="@dimen/medium_font_size" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ingredients_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/detail_margin"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_ingredient" >

            </androidx.recyclerview.widget.RecyclerView>

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/you_tube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/detail_margin"
                app:autoPlay="false"/>

            <TextView
                android:id="@+id/instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/detail_margin"
                android:layout_marginBottom="@dimen/detail_margin"
                android:fontFamily="@font/roboto" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>