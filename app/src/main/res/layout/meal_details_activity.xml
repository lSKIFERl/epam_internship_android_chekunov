<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/detailMealImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_image_height"
        app:srcCompat="@android:drawable/btn_dialog" />

    <TextView
        android:id="@+id/Cuisine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/detail_margin"
        android:layout_marginLeft="@dimen/detail_margin"
        android:layout_marginTop="@dimen/detail_margin"
        android:layout_marginEnd="@dimen/detail_margin"
        android:layout_marginRight="@dimen/detail_margin"
        android:text="@string/cuisine"
        android:textSize="@dimen/detail_title2" />

    <TextView
        android:id="@+id/detailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detail_margin"
        android:text="@string/title"
        android:textSize="@dimen/detail_title1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/detail_margin"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:text="@string/tag"
            android:textSize="@dimen/detail_title2" />
    </LinearLayout>
</LinearLayout>